<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <rotate
            android:fromDegrees="45"
            android:toDegrees="95"
            android:pivotX="-40%"
            android:pivotY="0%" >
            <shape
                android:shape="rectangle" >
                <stroke android:color="#DDD5D5" android:width="30dp"/>
                <solid
                    android:color="#DDD5D5" />
            </shape>
        </rotate>
    </item>
</layer-list>