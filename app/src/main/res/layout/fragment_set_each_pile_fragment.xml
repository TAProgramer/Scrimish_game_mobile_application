<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".setEachPile_fragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="327dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/layoutshape"
            android:gravity="center"
            android:orientation="horizontal"

            >

            <ImageView
                android:id="@+id/setimg"
                android:layout_width="183dp"
                android:layout_height="242dp"
                android:layout_marginStart="70dp"
                android:layout_marginLeft="70dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/showcount"
                    android:layout_width="32dp"
                    android:layout_height="62dp"
                    android:layout_margin="20dp"

                    android:textColor="#DAD5D5"
                    android:textSize="40dp" />

                <Button
                    android:id="@+id/nextbtn"
                    android:layout_width="50dp"
                    android:layout_height="82dp"
                    android:layout_marginStart="50dp"
                    android:layout_marginLeft="50dp"
                    android:background="@drawable/nextbuttonshape"
                    android:visibility="invisible"
                    app:backgroundTint="#E1DADA" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>



</FrameLayout>