<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3F487A"
    android:gravity="center"
    android:orientation="vertical"

    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="127dp"
        android:fontFamily="@font/almendra_display"
        android:gravity="center"
        android:text="Scimish"
        android:textColor="#DDD5D5"
        android:textSize="100dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="229dp"
        app:srcCompat="@drawable/crownimage" />

    <ProgressBar
        android:id="@+id/progressbar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="299dp"
        android:layout_height="62dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:fontFamily="@font/almendra_display"
        android:gravity="center"
        android:text="A Card Game Of Strategy"
        android:textColor="#DDD5D5"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:fontFamily="@font/almendra_display"
        android:gravity="center"
        android:text="Memory, And Misdirection"
        android:textColor="#DDD5D5"
        android:textSize="20dp"
        android:textStyle="bold" />

</LinearLayout>